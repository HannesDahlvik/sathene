{
    "name": "sathene",
    "version": "0.3.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/config/*",
        "packages/ui/*"
    ],
    "scripts": {
        "web": "pnpm --filter @sathene/web --",
        "build": "turbo build",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "bump": "node ./scripts/bump.js"
    },
    "devDependencies": {
        "@sathene/eslint": "workspace:*",
        "@sathene/tsconfig": "workspace:*",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "prettier": "^3.1.0",
        "turbo": "latest",
        "typescript": "^5"
    }
}
